/* Corps */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    color: white;
    background-color: #000;
}

/* En-t√™te */
header {
    background-color: #000;
    color: white;
    text-align: center;
    padding: 20px;
}

/* Musique */
.music-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    background-color: #1db954; /* Vert Spotify */
    padding: 20px;
    margin: 0;
    position: relative;
    height: 100vh;
}

.music-item img {
    width: 60%;
    max-height: 50vh;
    object-fit: cover;
    border: 2px solid white;
    margin-bottom: 10px;
}

.music-item h2 {
    margin: 10px 0;
}

.music-item audio {
    margin-top: 10px;
}

/* Ligne de s√©paration entre les musiques */
.music-separator {
    height: 10px;
    background-color: #000; /* Noir pour s√©parer */
    margin: 0;
}

/* Pied de page */
footer {
    background-color: #000;
    color: white;
    text-align: center;
    padding: 20px;
}

footer .footer-content a {
    color: #1db954;
    text-decoration: none;
}

footer .footer-content a:hover {
    text-decoration: underline;
}


